<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/">Home</a></li>
      <li class="breadcrumb-item active" aria-current="page">Register User</li>
    </ol>
  </nav>

<div class="px-4 py-5 my-5 text-center">
    <h1 class="display-5 fw-bold">Register New User</h1>
    <div class="col-lg-6 mx-auto">
        <p class="lead">Register with our firm to efficiently manage your inventory.</p>
    </div>
</div>

<div  class="row justify-content-center">

    <% if(infoSubmitObj != '') { %>
        <div class="col-8 alert alert-success" role="alert">
            <%= infoSubmitObj %>
        </div>
    <% } %>

    <% if(infoErrorsObj != '') { %>
        <div class="col-8 alert alert-danger" role="alert">
            <%= infoErrorsObj[0].message %>
        </div>
    <% } %>


    <div class="col-8">

        <form action="/register-user" enctype="multipart/form-data" method="POST">

            <div class="row g-3">
                <div class="col-12">
                    <label for="'email" class="form-label">Email</label>
                    <input type="email" name="email" id="email" class="form-control" required>
                </div>

                <div class="col-12">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" name="email" id="password" class="form-control" required>
                </div>

                <div class="col-12">
                    <label for="name" class="form-label">Firm Name</label>
                    <input type="text" name="name" id="name" class="form-control" required>
                </div>

                <div class="col-12">
                    <label for="phone" class="form-label">Phone</label>
                    <input type="integer" name="phone" id="phone" class="form-control" required>
                </div>

                <div class="col-12">
                    <label for="address" class="form-label">Address</label>
                    <textarea name="address" id="address" class="form-control" cols="30" rows="4"></textarea>
                </div>

                <div class="col-12">
                    <button type="submit" class="btn btn-primary">Register</button>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="px-4 py-5 my-5 text-center">
    <h1 class="display-5 fw-bold">Continue to Dashboard</h1>
    <div class="col-lg-6 mx-auto">
        <button type="homepage" class="btn btn-primary"><a href="http://localhost:4444/">Return to Homepage</a></button>
        <button type="continue" class="btn btn-outline-secondary"><a href="http://localhost:4444/dashboard">Continue to Dashboard</a></button>
    </div>
</div>